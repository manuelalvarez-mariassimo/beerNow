
<div class="details-container container">
  <section class="header">
    <div class="container">
      <h2 class="title is-2 has-text-weight-bold">{{beers.name}}</h2>
      <p class="subtitle is-5">{{beers.style}}</p>
    </div>
  </section>

  <section class="content beer-head">
    <div class="img-round imgDetails">
      <div class="likes">
        <i id="likes" class="far fa-heart fa-3x"></i>
      </div>
      <img src="{{beers.image}}" alt="">
    </div>



    <div class="container comment-form-container">
      <div class="info">
        <p class="subtitle is-5">Rate <span class="has-text-weight-semibold">{{beers.rate}}</span></p>
        <p class="subtitle is-5">Alc. <span class="has-text-weight-semibold">{{beers.alcohol}}</span>% vol.</p>
      </div>

      <div class="description">
        <p class="subtitle">
          {{beers.description}}
        </p>
      </div>
      <form action="/beers/details/{{beers._id}}" method="post">
        <p class="subtitle is-4 has-text-weight-semibold">What do you think?</p>

        <div class="Comment">
          <div class="field">
            <div class="control">
              <textarea name="comment" class="textarea is-small" placeholder="Leave your comment"></textarea>
            </div>
          </div>
          <div class="rateSubmit">
            <div class="stars">Rate</div>
            <div class="submit">
              <button class="button is-info is-small">SUBMIT</button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="beerComments comment-list-container">
      <p class="subtitle is-5 has-text-weight-semibold">{{beers.comments.length}} comments on this bar</p>
      {{#if beers.comments}}
      {{#each beers.comments}}
      <p><b>Someone nice said</b> {{this.comment}}</p>
      {{/each}}

      {{/if}}
    </div>

<input type="hidden" value="{{beers._id}}">

</div>

